<odoo>

	<record id="view_payment_proposal_form" model="ir.ui.view">
        <field name="name">payment.proposal.form</field>
        <field name="model">payment.proposal</field>
        <field name="arch" type="xml">
        	<form string="Payment Proposal">
        		<header>
                    <button name="action_submit" states="draft" type="object" class="oe_highlight" string="Submit"/>
                    <button name="action_approve" states="submit" type="object" class="oe_highlight" string="Approve"/>
                    <button name="action_cancel" states="submit,approve" type="object" class="oe_highlight" string="Cancel"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve,paid"/>
                </header>
                <sheet>
                	<div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                	<group>
                		<group>
                			<field name="date" />
                			<field name="user_id" />
                		</group>
                		<group>
                			<field name="company_id" groups="base.group_multi_company"/>
                			<field name="approved_user_id" />
                			<field name="approved_date" />
                		</group>
                	</group>
                	<group>
                		<notebook>
                			<page string='Lines' name="lines">
		                		<field name="payment_ids" nolabel="1"  context="{'default_partner_type': 'supplier','default_payment_type': 'outbound',
		                			'default_journal_id': False, 'default_generated_from_proposal': True,'default_proposal_state':state}">
		                			<tree editable="bottom">
		                				<field name="partner_id" required="1" attrs="{'readonly': ['|',('proposal_state','!=','draft'),('state','!=','draft')]}"/>
		                				<field name="company_id" groups="base.group_multi_company" invisible="1" attrs="{'readonly': ['|',('proposal_state','!=','draft'),('state','!=','draft')]}"/>
		                				<field name="partner_type" string="Partner Type" required="1" invisible="1"/>
		                				<field name="payment_type" string="Amount Type" required="1" invisible="1"/>
		                				<field name="journal_id" attrs="{'readonly': ['|',('proposal_state','!=','draft'),('state','!=','draft')]}"/>
		                				<field name="hide_payment_method" invisible="1"/>
		                				<field name="payment_method_id" invisible="1"/>
		                				<field name="generated_from_proposal" invisible="1"/>
		                				<field name="requested_amt" string="Req Amt" attrs="{'readonly': ['|',('proposal_state','!=','draft'),('state','!=','draft')]}"/>
		                				<field name="approved_amt" string="Approved Amt" attrs="{'readonly': ['|',('proposal_state','!=','submit'),('state','!=','draft')]}"/>
		                				<field name="amount" invisible="1"/>
		                				<button type="object" name="action_approve" string="Approve" icon="fa-check" class="btn-link" attrs="{'invisible': ['|',('proposal_state','!=','submit'),('state','!=','draft')]}"/>
		                				<button type="object" name="action_decline" string="Decline" icon="fa-times" class="btn-link" attrs="{'invisible': ['|',('proposal_state','!=','submit'),('state','!=','draft')]}"/>
		                				<button type="object" name="post" string="Confirm" icon="fa-check-square" class="btn-link" attrs="{'invisible': ['|',('proposal_state','!=','approve'),('state','!=','approve')]}"/>
		                				<field name="state"/>
		                				<field name="proposal_state" invisible="1"/>
		                			</tree>
		                		</field>
		                	</page>
		                </notebook>
                	</group>
                </sheet>
        	</form>
        </field>
    </record>

    <record id="view_payment_proposal_tree" model="ir.ui.view">
        <field name="name">payment.proposal.tree</field>
        <field name="model">payment.proposal</field>
        <field name="arch" type="xml">
        	<tree string="Payment Proposal">
        		<field name="name" />
        		<field name="date" />
        		<field name="user_id" />
                <field name="company_id" groups="base.group_multi_company"/>
        		<field name="state" />
        	</tree>
        </field>
    </record>

    <record id="action_view_payment_proposal" model="ir.actions.act_window">
       <field name="name">Payment Proposal</field>
       <field name="res_model">payment.proposal</field>
       <field name="domain">[]</field>
       <field name="view_mode">tree,form</field>
       <field name="help">Create Payment Proposal Here.</field>
   </record>


	
	<!-- Top menu item -->
    <menuitem id="menu_root_payment_proposal" name="Payment Proposal" parent="account.menu_finance" sequence="3" groups="account.group_account_user"/>

    <menuitem id="menu_payment_proposal" action="action_view_payment_proposal" name="Payment Proposal" parent="account.menu_finance" sequence="3" groups="account.group_account_user"/>

	
</odoo>